NODE_ENV=development
PORT=3001

# 使用 COS（S3 兼容）作为对象存储
STORAGE_TYPE=cos
S3_ENDPOINT=https://<your-cos-s3-endpoint>
S3_ACCESS_KEY=<COS_SECRET_ID>
S3_SECRET_KEY=<COS_SECRET_KEY>
S3_BUCKET=coshub-uploads
S3_REGION=ap-shanghai
S3_USE_SSL=true

# 上传限制
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_IMAGES=jpg,jpeg,png,gif,webp
UPLOAD_MAX_FILES=9
UPLOAD_PRESIGN_EXPIRES=3600

# CORS 允许源
CORS_ORIGINS=http://localhost:3000
